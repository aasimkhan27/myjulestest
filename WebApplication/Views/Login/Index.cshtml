<!DOCTYPE html>
<html ng-app="RestaurantEnterprise">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Wenodo | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript">
        var AppVersion = @System.Configuration.ConfigurationManager.AppSettings["AppVersion"].ToString();
    </script>
    @Styles.Render("~/E_Content/css/Main_Login")
    @Scripts.Render("~/E_Content/Scripts/Main_Login")
    @Scripts.Render("~/E_Scripts/Common")
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="icon" href="https://i2.wp.com/wenodo.com/wp-content/uploads/2020/10/logo-main-e1602233242613.png?fit=32%2C32&ssl=1" sizes="32x32" />
    <link rel="icon" href="https://i2.wp.com/wenodo.com/wp-content/uploads/2020/10/logo-main-e1602233242613.png?fit=32%2C32&ssl=1" sizes="192x192" />
    <style>
        .input-group-text a i {
            cursor: pointer;
        }
        .border-radius-0 {
            border-radius: 0 3px 3px 0;
            border: 0px;
            background: #e8f0fe;
        }
        #cookie-error {
            display: none;
            color: red;
            font-weight: bold;
            margin: 20px;
        }
        .semibold {
            font-weight: 600 !important;
        }
    </style>
</head>

<body ng-cloak>
    <div class="wrapper" ng-controller="LoginController">
        <div class="login-body">
            <div class="row">
                <div class="col-md-4 img-holder px-0">
                    <div class="bg">
                        <div class="logo text-center">
                            <a href="https://www.wenodo.com" target="_blank"><img src="~/E_Content/images/logo.png" alt=""></a>
                            <br /><h5 class="mt-3 text-bold app-text">Hospitality, simplified</h5>
                            <p class="border-bottom-dashed font-14">Smart digital solutions to help you build a business for the future</p>
                        </div>
                        @*<img src="~/E_Content/images/hero-image.png"/>*@

                    </div>
                </div>
                <div class="login-holder col-md-8 col-sm-12 px-0" ng-init="LOGIN_FLAG=true">
                    <div class="logo text-center hide_on_desktop">
                        <a href="https://www.wenodo.com" target="_blank"><img src="~/E_Content/images/logo.png" alt=""></a>
                    </div>
                    <div class="p-3 mb-3 bg-danger" ng-show="textContent!='' && textContent!=null"  id="cookie-error" style="border-radius: 10px; position: absolute; max-width: 50%; z-index: 9; text-align: center; left: 25%;top: 15%">
                        <span class="text-white font-13">
                            {{textContent}} <span class="semibold"> </span>
                            <span class="float-right cursor-pointer" style="margin-top:3px" ng-show="false"><i class="far fa-times text-white mr-3"></i></span>
                        </span>
                    </div>

                    <div class="p-3 mb-3 bg-danger" style="border-radius: 10px; position: absolute; width: 96%; z-index: 9; text-align: center; left: 2%;bottom: 6%" ng-show="false">
                        <span class="text-white font-13">
                            Application will be down for scheduled maintenance on <span class="semibold">25 May 2025 </span> from <br /><span class="semibold"> UK - 02:00 AM to 10:00 AM (BST) | UAE - 05:00 AM to 01:00 PM (GST) | India - 6:30 AM to 02:30 PM (IST) </span>
                            <span class="float-right cursor-pointer" style="margin-top:3px" ng-show="false"><i class="far fa-times text-white mr-3"></i></span>
                            <span class="d-block mt-2">In case you have any query please contact at <a href="mailto:support@wenodo.com" class="text-white" style="text-decoration:underline">support@wenodo.com</a></span>
                        </span>
                    </div>
                    <div class="login-content">
                        <div class="login-items">
                            <h3>Get more things done with Wenodo platform.</h3>
                            <p>Looking Beyond the POS System and Managing Your Restaurant Numbers.</p>

                            <login ng-show="LOGIN_FLAG">
                                <div class="page-links">
                                    <a class="active">Login</a>
                                </div>
                                <div class="input-group mb-2" ng-class="{'alert-error':!uservalid}" data-validate="{{UsernameValidationMessage}}">
                                    <input class="form-control" type="text" name="username" placeholder="E-mail Address"
                                           my-enter="ValidateAndLogin();"
                                           required ng-model="user.username" ng-focus="username_focus()">
                                    <span class="input-group-text border-radius-0 custom-box app-text">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                                <div class="input-group" ng-class="{'alert-error':!passwordvalid}" data-validate="Enter password">
                                    <input class="form-control" type="password" id="password" name="password" placeholder="Password"
                                           my-enter="ValidateAndLogin();"
                                           required data-type="password" ng-model="user.password" ng-focus="password_focus()">
                                    <span class="input-group-text border-radius-0 app-text">
                                        <a class="">
                                            <i class="fas fa-eye-slash" id="togglePassword"></i>
                                        </a>
                                    </span>
                                </div>
                                <div class="validation animated bounce mt-3" ng-if="INVALID_LOGIN">{{ValidationMessage}}</div>
                                <div class="login-button">
                                    <button id="submit" type="submit" class="ibtn" value="Sign In" ng-click="ValidateAndLogin()">Login</button>
                                    <a id="submit" class="float-right text-secondary cursor-pointer mt-2" value="Sign In" ng-click="GotToForgetPassword()">Forgot Password?</a>
                                </div>
                            </login>
                            <Forget ng-show="!LOGIN_FLAG">
                                <div class="page-links">
                                    <a class="active cursor-default">Forgot Password</a>
                                </div>
                                <div ng-class="{'alert-error':!uservalid}" data-validate="{{UsernameValidationMessage}}">
                                    <input class="login-control" type="text" name="username" placeholder="E-mail Address" required ng-model="user.username" ng-focus="username_focus()">

                                </div>
                                <div class="validation animated bounce" g-style="{ color: FLAG_ONE == '1' ? '#0093ff' : '#ff0000' }" style="color:#0093ff" ng-if="INVALID_EMAIL">{{ValidationMessageforget}}</div>
                                <div class="login-button">
                                    <button id="submit" type="submit" class="ibtn" value="Sign In" ng-click="ValidateAndForgetPassword()">Submit</button>
                                    <button id="submit" type="submit" class="ibtn" value="Back" ng-click="BackToForgetPassword()">Back</button>
                                </div>
                            </Forget>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/AngularControllers/LoginController.js?@System.Configuration.ConfigurationManager.AppSettings["AppVersion"].ToString()"></script>
    <script src="~/E_Scripts/angular-sanitize.min.js"></script>
    <script src="~/E_Scripts/Calendar/ui-bootstrap-tpls.min.js"></script>
    <script src="~/E_Scripts/Calendar/calendar.js"></script>
    <script src="~/E_Scripts/MomentTimePicker/moment-with-locales.min.js"></script>
    <script src="~/E_Scripts/MomentTimePicker/angular-moment-picker.min.js"></script>
    <link href="~/E_Scripts/MomentTimePicker/angular-moment-picker.min.css" rel="stylesheet" />
    <script src="~/E_Scripts/Select2/select.js"></script>
    <script src="~/E_Scripts/JsontoCSV/ng-csv.js"></script>
    <script src="~/E_Scripts/ExcelPdfJS/jspdf.min.js"></script>
    <script src="~/E_Scripts/ExcelPdfJS/jspdf.plugin.autotable.js"></script>
    <script src="~/E_Scripts/ExcelPdfJS/alasql.min.js"></script>
    <script src="~/E_Scripts/ExcelPdfJS/xlsx.core.min.js"></script>
    <script src="~/E_Scripts/Angular-Tour/angular-smooth-scroll.js"></script>
    <script src="~/E_Scripts/Angular-Tour/ez-ng.js"></script>
    <script src="~/E_Scripts/Angular-Tour/hotkeys.js"></script>
    <script src="~/E_Scripts/Angular-Tour/angular-ui-tour.js"></script>
    <script src="~/E_Scripts/TweenMax_Slider/TweenMax.min.js"></script>
    <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/149125/pdf.combined.js"></script>
    <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/149125/angular-pdf-viewer.min.js"></script>
    <script type="text/javascript">
        var cards = $('#card-slider .slider-item').toArray();

        startAnim(cards);

        function startAnim(array) {
            if (array.length >= 4) {
                TweenMax.fromTo(array[0], 0.5, { x: 0, y: 0, opacity: 0.75 }, { x: 0, y: -120, opacity: 0, zIndex: 0, delay: 0.03, ease: Cubic.easeInOut, onComplete: sortArray(array) });

                TweenMax.fromTo(array[1], 0.5, { x: 79, y: 125, opacity: 1, zIndex: 1 }, { x: 0, y: 0, opacity: 0.75, zIndex: 0, boxShadow: '-5px 8px 8px 0 rgba(82,89,129,0.05)', ease: Cubic.easeInOut });

                TweenMax.to(array[2], 0.5, { bezier: [{ x: 0, y: 250 }, { x: 65, y: 200 }, { x: 79, y: 125 }], boxShadow: '-5px 8px 8px 0 rgba(82,89,129,0.05)', zIndex: 1, opacity: 1, ease: Cubic.easeInOut });

                TweenMax.fromTo(array[3], 0.5, { x: 0, y: 400, opacity: 0, zIndex: 0 }, { x: 0, y: 250, opacity: 0.75, zIndex: 0, ease: Cubic.easeInOut });
            } else {
                $('#card-slider').append('<p>Sorry, carousel should contain more than 3 slides</p>')
            }
        }

        function sortArray(array) {
            clearTimeout(delay);
            var delay = setTimeout(function () {
                var firstElem = array.shift();
                array.push(firstElem);
                return startAnim(array);
            }, 5000)
        }
    </script>
</body>
</html>
