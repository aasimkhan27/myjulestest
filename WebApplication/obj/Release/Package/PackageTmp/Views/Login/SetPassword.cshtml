<!DOCTYPE html>
<html ng-app="RestaurantEnterprise">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Wenodo | Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script type="text/javascript">
        var AppVersion = @System.Configuration.ConfigurationManager.AppSettings["AppVersion"].ToString();
    </script>
    @Styles.Render("~/E_Content/css/Main_Login")
    @Scripts.Render("~/E_Content/Scripts/Main_Login")
    @Scripts.Render("~/E_Scripts/Common")
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <style>
        .overlay_loadingResetPassword {
            z-index: 9999;
            background-image: url(/E_Content/images/loading.gif);
            background-color: #666;
            opacity: 0.4;
            background-repeat: no-repeat;
            background-position: center;
            display: block;
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            
        }
    </style>
</head>
<body ng-cloak>
    <div class="wrapper" ng-controller="LoginController">
        @*<div class="overlay_loadingResetPassword" style="display:{{overlay_loading}}!important"></div>*@
        <div class="login-body">
            <div class="row">
                <div class="col-md-4 img-holder px-0">
                    <div class="bg">
                        <div class="logo text-center">
                            <a href="https://www.wenodo.com" target="_blank"><img src="~/E_Content/images/logo.png" alt=""></a>
                            <br /><h5 class="mt-3 text-bold app-text">Hospitality, simplified</h5>
                            <p class="border-bottom-dashed font-14">Smart digital solutions to help you build a business for the future</p>
                        </div>
                        @*<img src="~/E_Content/images/hero-image.png"/>*@
                    </div>
                </div>
                <div class="login-holder col-md-8 px-0" ng-init="LOGIN_FLAG=true">
                    <div class="logo text-center hide_on_desktop">
                        <a href="https://www.wenodo.com" target="_blank"><img src="~/E_Content/images/logo.png" alt=""></a>
                        <i class="fas fa-eye-slash" id="togglePassword"></i>
                    </div>
                    <div class="login-content">
                        <div ng-show="showResetPasswordbox">
                            <div class="login-items" ng-show="LINK_EXPIRE_FLAG" style="max-width:100%">
                                <h3>Welcome to Wenodo platform.</h3>
                                <p>Please set your login password below.</p>
                                <div class="page-links">
                                    <a class="active">Set Password</a>
                                </div>
                                <login ng-show="LOGIN_FLAG">
                                    <div ng-class="{'alert-error':!passwordvalid}" data-validate="Enter password">
                                        <input class="login-control" type="password" name="password" placeholder="Set Password" required data-type="password" ng-model="user.password" ng-focus="password_focus()">
                                    </div>

                                    <div ng-class="{'alert-error':!passwordvalid}" data-validate="Enter password">
                                        <input class="login-control" type="password" name="password" placeholder="Confirm Password" required data-type="password" ng-model="user.conf_password" ng-focus="password_focus()">
                                    </div>

                                    <div class="validation animated bounce" ng-if="INVALID_LOGIN">Password does not match.</div>

                                    <div class="login-button">
                                        <button id="submit" type="submit" class="ibtn" value="Sign In" ng-click="SetPassword()">Submit</button>
                                    </div>
                                </login>
                            </div>
                            <div class="login-items" ng-show="!LINK_EXPIRE_FLAG" style="max-width:100%">
                                <h3>"Your Password Reset link has been expired."</h3>
                                <div class="login-button">
                                    <button id="submit" type="submit" class="ibtn" value="Sign In" ng-click="Backtologin()"><i class="fal fa-arrow-left"></i> Go to Login</button>
                                </div>
                                
                                @*<a href="../Login" class="ibtn">
                                    <i class="fal fa-arrow-left"></i> Go to Login
                                </a>*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



        
        <script type="text/javascript" src="~/AngularControllers/LoginController.js?@System.Configuration.ConfigurationManager.AppSettings["AppVersion"].ToString()"></script>
        <script src="~/E_Scripts/angular-sanitize.min.js"></script>
        <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.1.2.js"></script>

        <script src="~/E_Scripts/Calendar/ui-bootstrap-tpls.min.js"></script>
        <script src="~/E_Scripts/Calendar/calendar.js"></script>
        <script src="~/E_Scripts/MomentTimePicker/moment-with-locales.min.js"></script>
        <script src="~/E_Scripts/MomentTimePicker/angular-moment-picker.min.js"></script>
        <link href="~/E_Scripts/MomentTimePicker/angular-moment-picker.min.css" rel="stylesheet" />
        <script src="~/E_Scripts/Select2/select.js"></script>
        <script src="~/E_Scripts/JsontoCSV/ng-csv.js"></script>
        <script src="~/E_Scripts/ExcelPdfJS/jspdf.min.js"></script>
        <script src="~/E_Scripts/ExcelPdfJS/jspdf.plugin.autotable.js"></script>
        <script src="~/E_Scripts/ExcelPdfJS/alasql.min.js"></script>
        <script src="~/E_Scripts/ExcelPdfJS/xlsx.core.min.js"></script>
</body>
</html>
