@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/App_Suit.cshtml";
}
<script type="text/javascript">
        var AppVersion = @System.Configuration.ConfigurationManager.AppSettings["AppVersion"].ToString();
</script>
<div class="app-suit-margin" ng-controller="AppSuiteController">
    
    <div class="app-suit">
        <div class="row">
            <div class="col-md-12"><h3 class="app-text">Hello, <span class="text-bold">{{User_Name}}!</span></h3></div>
            <div class="col" ng-show="false">
                <div class="pl-4 p-2 mb-2 bg-appsuite-light-blue mr-4" style="border-radius:30px;">
                    <span class="app-text font-13">
                        Website under maintenance <span class="semibold">from 12 AM to 6 PM</span>
                        <span class="float-right cursor-pointer"><i class="far fa-times text-danger mr-3"></i></span>
                    </span>
                </div>
            </div>
            <div class="col" ng-show="false">
                <div class="pl-4 p-2 mb-2 bg-danger mr-4" style="border-radius:30px;">
                    <span class="text-white font-13">
                        Website will be turned off <span class="semibold">from 12 AM to 6 PM</span>
                        <span class="float-right cursor-pointer"><i class="far fa-times text-white mr-3"></i></span>
                    </span>
                </div>
            </div>
        </div>

        <div class="col-md-12" ng-show="false">
            <div class="px-4 py-2 mb-2 bg-danger mr-4" style="border-radius:30px;">
                <span class="text-white font-13">
                    Application will be down for scheduled maintenance on <span class="semibold">25 May 2025 </span> from <span class="semibold"> UK - 02:00 AM to 10:00 AM (BST) |   UAE - 05:00 AM to 01:00 PM (GST) | India - 6:30 AM to 02:30 PM (IST).</span>
                    <span class="float-right cursor-pointer" style="margin-top:3px" ng-show="false"><i class="far fa-times text-white mr-3"></i></span>
                    In case you have any query please contact at <a href="mailto:support@wenodo.com" class="text-white" style="text-decoration:underline">support@wenodo.com</a>
                </span>
            </div>
        </div>

        <div class="at-grid" tour-step
             tour-step-title="Wenodo Modules"
             tour-step-content="Choose your amazing Wenodo Modules"
             tour-step-order="2"
             tour-step-placement="top"
             tour-step-backdrop="true"
             tour-step-append-to-body="true" data-column="9">
            <div class="at-column cursor-pointer {{Module.CLASS_NAME}}" id="{{Module.MODULE_ID}}" ng-repeat="Module in ModuleList" ng-click="ModuleRedirection(Module)" ng-if="Module.IS_VISIBLE_IN_APP_SUITE">
                <div class="at-user">
                    <div class="at-user__avatar text-lightblue">
                        @*<i class="fad {{Module.MODULE_ICON}} fa-2x"></i>*@
                        <img src="~/E_Content/images/Appsuite_Icons/{{Module.MODULE_ICON | trim }}" class="hide-on-hover" />
                    </div>

                    <div class="at-user__name hide-on-hover mt-2">{{Module.MODULE_NAME}}</div>
                </div>
                <div class="middle">
                    <a ng-if="Module.FLAG">
                        @*<i class="fal {{Module.MODULE_ICON}} fa-2x silver mt-2"></i>*@
                        <img src="../E_Content/images/Appsuite_Icons/{{Module.MODULE_ICON | trim }}" />
                        <span class="mt-2">{{Module.MODULE_NAME}} <i class="fal fa-arrow-right"></i></span>
                    </a>
                    <a href="{{Module.SUBSCRIBE_PATH}}" class="text-white" target="_blank" ng-if="!Module.FLAG">
                        <i class="fal fa-hand-sparkles fa-2x silver"></i>
                        <span class="at-user__name mt-2">Subscribe</span>
                    </a>
                </div>
            </div>
          
        </div>
    </div>
</div>

<script src="~/AngularControllers/AppSuiteController.js"></script>
<script src="~/AngularControllers/AdminController.js"></script>
